<body>
    <div class="container">
        <form autocomplete="off" id="numberForm" onsubmit="processForm(event)">
            <h1>First-In-First-Out Page Replacement Algorithm</h1>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Page Reference Sequence</label>
                <input type="text" id="numberInput" name="numbers" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Frames</label>
                <input type="text" id="headPositionInput" name="headposition" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary">Calculate</button>
        </form>
        <div class="container container1 mt-5">
            <table class="attributes">
                <thead>
                    <tr id="tableHeaderRow">
                        
                    </tr>
                </thead>
                <tbody id="numberBody">
                </tbody>
            </table>
        </div>

    </div>
    <button type="reset" class="btn btn-primary back" value="Reset"><a href="/services/">Back</a></button>

